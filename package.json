{
  "name": "stretch-time",
  "version": "1.0.0",
  "description": "System tray app that reminds you to stretch, with calendar integration",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  },
  "build": {
    "appId": "com.stretchtime.app",
    "productName": "StretchTime",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "assets/**/*"
    ]
  }
}
